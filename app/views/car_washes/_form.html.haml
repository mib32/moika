.bip_input
  #main_action_label Ведите текст для бегущей строки
  #main_action_input
    = best_in_place @car_wash, :main_action_text, :path => car_washes_update_main_action_path,:type => :input, :nil => "..to add content!", :html_attrs => {:class=>"dummy"}, :activator => "#editme"
  #main_action_button
    %a(id="editme" href="#")= t('save_button')

.container
  = form_for @car_wash, role: "form", html: {class: "car_wash_edit"} do |f|
    - if @car_wash.errors.any?
      #error_explanation
        %h2= "#{pluralize(@car_wash.errors.count, "error")} prohibited this car_wash from being saved:"
        %ul
          - @car_wash.errors.full_messages.each do |msg|
            %li= msg

    #left_form
      %h3 Акция
      %ul
        -@actions.each do |action|
          %li= action.action_type_text
          %li= action.text

      %hr
      = f.fields_for :actions do |builder|
        -ActionType.find_each do |type|
          %ul
            %li
              = builder.label :action_text_id
              = builder.text_field :action_text_id, value: @actions.find_by(action_type_id: type.id).try(:text)
            %li
              = builder.label :action_type_text
              = builder.text_field :action_type_text, value: ActionType.find_by(text: type.text).text
      .actions
        = f.submit t("save_button")
    #center_form
      %h3 Свободно
      %p.text-center
        = image_tag ('green.png')
    #right_form
      %h3 Занято
      %p.text-center
        = image_tag ('red.png')



#car_wash_menu
  #login_registration
    %ul.menu
      %li#login
        = render 'devise/menu/login_items'
      %li
        = render 'devise/menu/registration_items'
      %li
        = link_to current_user.email, "#" unless current_user.nil?
    %ul#car_wash_info
      %li
        %span Адрес:
        %span= @car_wash.address
      %li
        %button.btn.btn-primary.btn-lg.btn-block(type="button")
          Оставить отзыв
      %li
        %p Координаты:
        %span Широта:
        %span= @car_wash.lat
        %br
        %span Долгота:
        %span= @car_wash.lon
      %li
        %span Контакты:
        %span= @car_wash.contacts
      %li
        %span Услуги:
        %span= @car_wash.services
      %li
        %span Цена:
        %span= @car_wash.price
      %li
        %span Кол-во моечных зон:
        %span= @car_wash.zones_count
      %li
        %span Акции:
        %span= @car_wash.actions
  #signal_video
    #free_close_signal
      %ul.menu
        %li Свободно
    .video#video1
      %ul.menu
        %li  Камера №1
    .video#video2
      %ul.menu
        %li  Камера №2
  =#render partial: 'car_wash_menu'
  %p#notice= notice

  .row
    .col-lg-12
      %h2.text-center
        = "Автомойка #{@car_wash.title}"

    .col-lg-1
      - if @car_wash.signal
        %h5 Свободно
        =image_tag "banner_green.png"
      - else
        %h5 Занято
        =image_tag "banner_red.png"
      = image_tag 'video.png'

  = link_to 'Редактировать', edit_car_wash_path(@car_wash), class: 'btn btn-primary'
  %br
  %br
  /\|
  =#link_to 'Назад', car_washes_path

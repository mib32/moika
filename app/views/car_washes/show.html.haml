- content_for :adv1 do
  %marquee(behavior="alternate" direction="left")
    %h5.text-center= "#{@car_wash.main_action_text} #{t('adv1')}"
#car_wash_menu
  #login_registration
    %ul.menu
      %li
        = render 'devise/menu/login_items'
      %li
        = render 'devise/menu/registration_items'
    = render partial: "car_wash_info", locals: { car_wash: @car_wash, left_actions: @left_actions }
   
    #comments_button
      = link_to t('.comments'), car_wash_comments_path(@car_wash)
    #enroll_button
      = link_to t('.send_request'), new_car_wash_request_path(@car_wash)
    = image_tag 'adv2.png', class: 'adv'
  #signal_video
    #free_close_signal
      %ul.menu
        - if @car_wash.signal
          %li Свободно
        - else
          %li Занято

      #signal_image
        - if @car_wash.signal
          =image_tag "green.png"
        - else
          =image_tag "red.png"
    .video#video1
      %ul.menu
        %li Камера с поста №1
      = image_tag 'video.png' 
    .video#video2
      %ul.menu
        %li Камера с поста №2
      = image_tag 'video.png' 
    #service
      = image_tag 'service.png'
    #info
      #info_header 
        %h3 Информация
      #info_content
        .bottom1_actions#left
          %h4 Акции
          %ul
            = actions(@bottom1_actions, 'li')
          
        .bottom2_actions#center
          %h4 Акции
          %ul
            = actions(@bottom2_actions, 'li')
        .vacancy_actions#right
          %h4 Вакансии
          %ul
            = actions(@vacancy_actions, 'li')
  =#render partial: 'car_wash_menu'
  %p#notice= notice


  = link_to 'Редактировать', edit_car_wash_path(@car_wash), class: 'btn btn-primary'
  /\|
  =#link_to 'Назад', car_washes_path

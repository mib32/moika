= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f|
  = devise_error_messages!
  %h2.form-signin-heading= t("devise.sign_up")
  %div
    = f.label :email, User.human_attribute_name("email")
    %br/
    = f.email_field :email, :autofocus => true, class: "form-control"
  %div
    = f.label :password, User.human_attribute_name("password")
    %br/
    = f.password_field :password, class: "form-control"
  %div
    = f.label :password_confirmation, User.human_attribute_name("password_confirmation")
    %br/
    = f.password_field :password_confirmation, class: "form-control"
  %div= f.submit t("devise.sign_up"), class: "btn btn-lg btn-primary btn-block"
  %br
  = render "devise/shared/links"

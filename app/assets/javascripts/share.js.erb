      + '</h5>'
      + '<h3 class="phone">'
      + 'Телефон: ' + car_wash.contacts
      + '</h3>'
      + '<h5 class="services">'
      + car_wash.services
      + '</h5>'
      + (car_wash.main_action == null ? '' : '<h3 class="red">' + car_wash.main_action + '</h3>');

